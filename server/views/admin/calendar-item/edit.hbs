<div id="edit-container" class="col-xs-12 col-md-12">
    <div class="row-fluid">
        <h2>Edit Appointment</h2>
    </div>

    <div class="well col-xs-12 col-md-12">
        <div class="col-xs-12 col-md-12">
            <p><span style="color:#ff0000">*</span> = Required</p>
        </div>
    
        <form class="col-xs-12 col-md-12" method="post" action="/admin/calendar-item/{{calendar._id}}" enctype="multipart/form-data" role="form">
            <label>Name<span style="color:#ff0000;">*</span>:</label>
            <input type="text" class="form-control" name="title" value="{{calendar.title}}" required>
            <br>
            <label>Date<span style="color:#ff0000;">*</span>:</label>
            <input type="text" class="form-control" id="datepicker" name="date" value="{{calendar.date}}" required>
            <br>
            <label>Time<span style="color:#ff0000;">*</span>:</label>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <select name="time" id="posttype" class="form-control" required>
                        <option disabled selected value="">Select Time</option>
                        <option {{#equalsTo calendar.time "10"}}selected{{/equalsTo}} value="10">10:00am</option>
                        <option {{#equalsTo calendar.time "11"}}selected{{/equalsTo}} value="11">11:00am</option>
                        <option {{#equalsTo calendar.time "12"}}selected{{/equalsTo}} value="12">12:00pm</option>
                        <option {{#equalsTo calendar.time "13"}}selected{{/equalsTo}} value="13">1:00pm</option>
                        <option {{#equalsTo calendar.time "14"}}selected{{/equalsTo}} value="14">2:00pm</option>
                        <option {{#equalsTo calendar.time "15"}}selected{{/equalsTo}} value="15">3:00pm</option>
                        <option {{#equalsTo calendar.time "16"}}selected{{/equalsTo}} value="16">4:00pm</option>
                        <option {{#equalsTo calendar.time "17"}}selected{{/equalsTo}} value="17">5:00pm</option>
                        <option {{#equalsTo calendar.time "18"}}selected{{/equalsTo}} value="18">6:00pm</option>
                        <option {{#equalsTo calendar.time "19"}}selected{{/equalsTo}} value="19">7:00pm</option>
                    </select>
                </div>
            </div>
            <br>
            <label>Service<span style="color:#ff0000;">*</span>:</label>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <select name="service" id="posttype" class="form-control" required>
                        <option disabled selected value="">Select Service</option>
                        <option {{#equalsTo calendar.service "haircut"}}selected{{/equalsTo}} value="haircut">Haircut</option>
                        <option {{#equalsTo calendar.service "shave"}}selected{{/equalsTo}} value="shave">Shave</option>
                        <option {{#equalsTo calendar.service "haircutShave"}}selected{{/equalsTo}} value="haircutShave">Haircut + Shave</option>
                        <option {{#equalsTo calendar.service "childrens"}}selected{{/equalsTo}} value="childrens">Children</option>
                    </select>
                </div>
            </div>
            <br>
            <label>E-mail<span style="color:#ff0000;">*</span>:</label>
            <input type="email" class="form-control" name="email" value="{{calendar.email}}" required>
            <br>
            <label>Phone<span style="color:#ff0000;">*</span>:</label>
            <input type="tel" class="form-control" name="phone" value="{{calendar.phone}}" required>
            <br>
            <label>Special Requests:</label>
            <textarea class="form-control" rows="5" cols="10" name="request" id="update-content">{{calendar.request}}</textarea>
            <br>
            <div class="row">
                <div class="col-xs-12 col-sm-12">
                    <button type="submit" class="btn btn-success">Update Appointment</button>
                    <a href="/admin/calendar-item" class="btn btn-primary">Go Back</a>
                    <a href="/admin/calendar-item/{{calendar._id}}/destroy" class="btn btn-danger">Delete Appointment</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
   $(function() {
        $( "#datepicker" ).datepicker();
    });
</script>