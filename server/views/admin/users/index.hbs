<div class="admin-body">
    <a href="/admin/users/add_new" class="btn btn-success">New User</a>
    <br>
    <br>
    <table class="table table-striped table-bordered table-condensed" id="users-table-list">
        <thead>
            <tr>
                <th class="col-md-3 col-xs-3">Name</th>
                <th class="col-md-3 col-xs-3">E-Mail</th>
                <th class="col-md-3 col-xs-3">Group</th>
                <th class="col-md-3 col-xs-3">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr data-id="{{_id}}" data-order="{{@index}}">
                <td>{{name}}</td>
                <td>{{local.email}}</td>
                <td>{{group}}</td>
                <td>
                    <a href="/admin/users/{{_id}}/destroy" class="btn btn-danger" onclick="return confirm('You sure you want to remove this item?')"><i class="fa fa-trash-o"></i> Delete</a>
                    <a href="/admin/users/{{_id}}" class="btn btn-warning"><i class="fa fa-pencil"></i> Edit</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

