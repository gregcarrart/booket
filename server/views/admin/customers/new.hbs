<div id="post-container" class="col-xs-12 col-md-12">
    <div class="row-fluid">
        <h2>Add New Appointment</h2>
    </div>
    
    <div class="well col-xs-12 col-md-12">
        <div class="col-xs-12 col-md-12">
            <p><span style="color:#ff0000">*</span> = Required</p>
        </div>
        <form class="col-xs-12 col-md-12" method="post" action="/admin/calendar-item" enctype="multipart/form-data" role="form">
            <label>Name<span style="color:#ff0000;">*</span>:</label>
            <input type="text" class="form-control" name="title" placeholder="Enter Name" required>
            <br>
            <label>Date<span style="color:#ff0000;">*</span>:</label>
            <input type="text" class="form-control" id="datepicker" name="date" placeholder="Enter Date" required>
            <br>
            <label>Time<span style="color:#ff0000;">*</span>:</label>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <select name="time" id="posttype" class="form-control" required>
                        <option disabled selected value="">Select Time</option>
                        <option value="10">10:00am</option>
                        <option value="11">11:00am</option>
                        <option value="12">12:00pm</option>
                        <option value="13">1:00pm</option>
                        <option value="14">2:00pm</option>
                        <option value="15">3:00pm</option>
                        <option value="16">4:00pm</option>
                        <option value="17">5:00pm</option>
                        <option value="18">6:00pm</option>
                        <option value="19">7:00pm</option>
                    </select>
                </div>
            </div>
            <br>
            <label>Service<span style="color:#ff0000;">*</span>:</label>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <select name="service" id="posttype" class="form-control" required>
                        <option disabled selected value="">Select Service</option>
                        <option value="haircut">Haircut</option>
                        <option value="shave">Shave</option>
                        <option value="haircutShave">Haircut + Shave</option>
                        <option value="childrens">Children</option>
                    </select>
                </div>
            </div>
            <br>
            <label>E-mail<span style="color:#ff0000;">*</span>:</label>
            <input type="email" class="form-control" name="email" placeholder="Enter E-mail" required>
            <br>
            <label>Phone<span style="color:#ff0000;">*</span>:</label>
            <input type="tel" class="form-control" name="phone" placeholder="Enter Phone" required>
            <br>
            <label>Special Requests:</label>
            <textarea class="form-control" rows="5" cols="10" name="request" id="update-content"></textarea>
            <br>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <button type="submit" class="btn btn-success">Create Appointment</button>
                    <a href="/admin/calendar-item" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(function() {
        $( "#datepicker" ).datepicker();
    });
</script>